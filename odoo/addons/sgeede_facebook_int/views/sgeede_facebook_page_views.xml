<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sgeede_facebook_page_tree" model="ir.ui.view">
            <field name="name">sgeede.facebook.page.tree</field>
            <field name="model">sgeede.facebook.page</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Facebook Page">
                    <field name="name"/>
                    <field name="page_id"/>
                </tree>
            </field>
        </record>

        <record id="view_sgeede_facebook_page_form" model="ir.ui.view">
            <field name="name">sgeede.facebook.page.form</field>
            <field name="model">sgeede.facebook.page</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Facebook Page">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="user_account" required="1"/>
                            <field name="user_token" required="1"/>
                            <field name="page_id" required="1"/>
                            <field name="page_token"/>
                        </group>
                        <button name="cron_generate_token_data" string="Generate Token Data" type="object" class="oe_highlight"/>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_sgeede_facebook_page" model="ir.actions.act_window">
            <field name="name">Facebook Page</field>
            <field name="res_model">sgeede.facebook.page</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
    </data>
</odoo>