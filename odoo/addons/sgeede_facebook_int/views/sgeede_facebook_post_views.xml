<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_post_form" model="ir.ui.view">
        <field name="name">sgeede.facebook.post.form</field>
        <field name="model">sgeede.facebook.post</field>
        <field name="arch" type="xml">
            <form string="Facebook Post" class="o_sale_order">
            <header>
            </header>
            <sheet>
                 <div class="oe_button_box" name="button_box">
                    <button name="action_read_all_comments"
                        class="oe_stat_button"
                        icon="fa-bars"
                        type="object"
                        help="List view of comments">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value d-flex gap-1">
                                <field name="sum_comment" nolabel="1" class="oe_inline"/>
                            </span>
                            <span class="o_stat_text">Comment</span>
                    </div>
                    </button>
                 </div>
                <div class="oe_title">
                    <h1>
                        <field name="message" />
                    </h1>
                </div>
                <group name="post_header">
                    <group name="post_details">
                        <field name="id_post" />
                        <field name="type_post" invisible="1"/>
                        <field name="page_id" />
                    </group>
                    <group name="post_time">
                        <field name="post_date"/>
                        <field name="story" />
                    </group>
                </group>
                <notebook>
                    <page string="Attachment" name="attachment">
                        <field name="attachment_ids">
                            <tree string="Attachment Post" create="0" editable="0" delete="0">
                                <field name="name"/>
                                <field name="product_id"/>
                                <field name="attachment_link" widget="url"/>
                                <field name="attachment_type"/>
                                <field name="id_attachment" column_invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
             <div class="oe_chatter">
                <field name="message_follower_ids" groups="base.group_user"/>
                <field name="activity_ids"/>
                <field name="message_ids"/>
            </div>
            </form>
        </field>
    </record>

   

    <record id="sgeede_facebook_post_tree" model="ir.ui.view">
        <field name="name">sgeede.facebook.post.tree</field>
        <field name="model">sgeede.facebook.post</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree class="o_sale_order"
                  string="Facebook Post"
                  sample="1" create="0">
                <field name="message" readonly="1"/>
                <field name="type_post" optional="show"/>
                <field name="post_date" optional="show"/>
                <field name="page_id" readonly="1"/>
                <field name="name" string="Post ID" readonly="1" decoration-bf="1"/>
            </tree>
        </field>
    </record>

    <record id="view_sgeede_facebook_post_filter" model="ir.ui.view">
        <field name="name">sgeede.facebook.post.filter</field>
        <field name="model">sgeede.facebook.post</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <search string="Search Facebook Post">
                <field name="name" string="Post"
                    filter_domain="['|', '|', ('name', 'ilike', self)]"/>
                <field string="Date" name="post_date"/>
                <filter string="Today Activities" name="activities_today"
                    domain="[('post_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
            </search>
        </field>
    </record>

    <record id="action_sgeede_facebook_post" model="ir.actions.act_window">
        <field name="name">Facebook Post</field>
        <field name="res_model">sgeede.facebook.post</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="sgeede_facebook_post_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_sgeede_facebook_post_filter"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Post!
            </p>
        </field>
    </record>
</odoo>