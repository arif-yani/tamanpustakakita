<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sgeede_facebook_get_post_form" model="ir.ui.view">
            <field name="name">Facebook Get Post</field>
            <field name="model">sgeede.facebook.get.post</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Facebook Get Post">
                    <p>
                        Fetch Facebook post and insert to SGEEDE system.
                    </p>
                    <group>
                        <field name="page_id" required="1" widget="selection"/>
                    </group>
                    <footer>
                        <button name="create_post" string="Confirm" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sgeede_facebook_get_post" model="ir.actions.act_window">
            <field name="name">Get Post</field>
            <field name="res_model">sgeede.facebook.get.post</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_sgeede_facebook_get_post_form"/>
        </record>
        
    </data>
</odoo>
