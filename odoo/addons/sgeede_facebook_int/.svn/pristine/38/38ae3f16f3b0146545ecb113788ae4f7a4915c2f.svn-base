<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sgeede_facebook_reply_comment_form" model="ir.ui.view">
            <field name="name">Facebook Reply Comment</field>
            <field name="model">sgeede.facebook.reply.comment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Facebook Reply Comment">
                    <field name="message" required="1"/>
                    <field name="comment_id" invisible="1"/>
                    <field name="page_id" invisible="1"/>
                    <footer>
                        <button name="api_send_message" string="Send" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sgeede_facebook_get_post" model="ir.actions.act_window">
            <field name="name">Get Post</field>
            <field name="res_model">sgeede.facebook.get.post</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_sgeede_facebook_get_post_form"/>
        </record>
        
    </data>
</odoo>
