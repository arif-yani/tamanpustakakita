<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_pustaka_inherit_view" model="ir.ui.view">
        <field name="name">product.template.common.form.pustaka.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="penulis"/>
                <field name="status_peminjaman"/>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_pustaka_inherit_view" model="ir.ui.view">
        <field name="name">product.template.common.tree.pustaka.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='supplier_taxes_id']" position="after">
                <field name="penulis"/>
                <field name="status_peminjaman" widget="badge"/>
            </xpath>
        </field>
    </record>
</odoo>