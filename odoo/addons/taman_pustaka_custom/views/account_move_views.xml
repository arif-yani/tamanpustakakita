<odoo>
    <record id="view_move_form_pustaka_inherit" model="ir.ui.view">
        <field name="name">view.move.form.pustaka.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
             <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='currency_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- <xpath expr="//group[@name='oe_subtotal_footer']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="waktu_pengembalian" readonly="state != 'draft'"/>
            </xpath>
             <xpath expr="//field[@name='payment_reference']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
             <xpath expr="//group[@id='header_right_group']/field[@name='currency_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@class='o_td_label']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@class='d-flex']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace">
                <field name="status_peminjaman" widget="statusbar" statusbar_visible="draft,dipinjam,dikembalikan,terlmabat"/>
            </xpath>
             <xpath expr="//button[@name='action_post']" position="after">
                <button name="action_set_dikembalikan" string="Dikembalikan" type="object"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_pustaka_inherit" model="ir.ui.view">
        <field name="name">view.move.tree.pustaka.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="column_invisible">1</attribute>
             </xpath>
             <xpath expr="//field[@name='state']" position="after">
                <field name="status_peminjaman" widget="badge"/>
            </xpath>
            <xpath expr="//field[@name='invoice_date_due']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_date_due']" position="after">
                <field name="waktu_pengembalian" widget="remaining_days"/>
            </xpath>
        </field>
    </record>
</odoo>