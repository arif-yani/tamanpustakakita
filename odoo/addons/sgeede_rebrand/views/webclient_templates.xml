<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="layout" inherit_id="web.layout" name="V17 Enterprise Web layout">
        <xpath expr="//title" position="replace">
            <title t-esc="title or 'SGEEDE ERP'"/>
        </xpath>

        <xpath expr="//link[@type='image/x-icon']" position="replace">
            <link type="image/x-icon" rel="shortcut icon" t-att-href="x_icon or '/sgeede_rebrand/static/src/img/favicon.png'"/>
        </xpath>
    </template>

    <template id="webclient_bootstrap" inherit_id="web.webclient_bootstrap">
        <xpath expr="//t[@t-set='head']" position="after">
            <t t-set="head_web_enterprise">
                <!-- Chrome, Firefox OS and Opera -->
                <meta name="theme-color" content="#254472"/>

                <!-- iOS Safari -->
                <meta name="apple-mobile-web-app-capable" content="yes"/>
                <meta name="apple-mobile-web-app-status-bar-style" content="black"/>

                <!-- Windows Phone -->
                <meta name="msapplication-navbutton-color" content="#254472"/>
                <meta name="msapplication-TileColor" content="#254472"/>
            </t>
            <t t-set="head" t-value="head_web_enterprise + (head or '')"/>
        </xpath>
    </template>
    
</odoo>
