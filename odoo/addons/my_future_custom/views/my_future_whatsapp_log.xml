<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <record id="view_whatsapp_log" model="ir.ui.view">
        <field name="name">my.future.whatsapp.log.form</field>
        <field name="model">my.future.whatsapp.log</field>
        <field name="arch" type="xml">
            <form string="Whatsapp Log" class="o_sale_order">
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
                <group name="log_header">
                    <group name="log_detail">
                        <!-- <field name="partner_id"/> -->
                        <field name="dst_number"/>
                        <field name="running_date"/>
                        <field name="status_code"/>
                        <field name="state"  decoration-success="state == 'success'" decoration-danger="state == 'failed'" widget="badge"/>
                    </group>
                </group>
                <notebook>
                    <page string="Response" name="reponse_api">
                        <field name="message"/>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record id="my_future_whatsapp_log_tree" model="ir.ui.view">
        <field name="name">my.future.whatsapp.log.tree</field>
        <field name="model">my.future.whatsapp.log</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree class="o_sale_order"
                  string="Facebook API Log" create="0">
                <field name="name" string="Name" readonly="1" decoration-bf="1"/>
                <!-- <field name="partner_id" optional="show" /> -->
                <field name="dst_number" optional="show" />
                <field name="status_code" optional="show" />
                <field name="running_date" optional="show" />
                <field name="state" readonly="1" decoration-success="state == 'success'" decoration-danger="state == 'failed'" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="action_my_future_whatsapp_log" model="ir.actions.act_window">
        <field name="name">Whatsapp Log</field>
        <field name="res_model">my.future.whatsapp.log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="my_future_whatsapp_log_tree"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Log!
            </p>
        </field>
    </record>
</odoo>