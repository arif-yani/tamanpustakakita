<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form_inherit_my_future" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.my.future</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id'][2]" position="after">
                <field name="mobile"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_tree_inherit_myfuture" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit,myfuture</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="mobile"/>
            </xpath>
        </field>
    </record>


    <record id="view_move_form_myfuture_inherit" model="ir.ui.view">
        <field name="name">view.move.form.myfuture.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button name="action_read_all_scanned"
                        class="oe_stat_button"
                        icon="fa-bars"
                        type="object"
                        help="List view of Scanned">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Scanned</span>
                    </div>
                    </button>
                 </div>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_cut_dp" type="object" string="Potong DP"
                    groups="account.group_account_user" invisible="1"/>
                <button name="action_print_myfuture_label" type="object" string="Print Label"
                    groups="account.group_account_user"/>
                <button name="action_print_myfuture_invoice" type="object" string="Print Invoice"
                    groups="account.group_account_user"/>
                <button name="action_update_status_paket" type="object" string="Update status paket"/>
            </xpath>
            <xpath expr="//button[@name='action_register_payment']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="titipan"/>
                <field name="harga_ongkir"/>
                <field name="hutang"/>
                <field name="sisa_dp"/>
                <field name="total_weight"/>
                <field name="payment_link" invisible="1"/>
                <field name="invoice_link_download" invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="count_print_label" readonly="1" force_save="1"/>
                <field name="printed_label" readonly="1" force_save="1"/>
                <field name="confirmed_paket"/>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='account_id']" position="after">
                <field name="size_id" optional="show"/>
                <field name="color" optional="show"/>
                <field name="weight" optional="show"/>
            </xpath>
            <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="after">
                <field name="total_weight" optional="show"/>
            </xpath>
            <xpath expr="//page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="replace">
                <field name="integer_quantity" optional="show"/>
            </xpath>
             <xpath expr="//page[@name='invoice_tab']" position="after">
                 <page id="paket_tab" name="paket_tab" string="Paket Lines" invisible="move_type == 'entry'">
                    <field name="paket_line_ids" mode="tree">
                        <tree string="Paket Line" editable="bottom" multi_edit="1">
                            <field name="name" readonly="1"/>
                            <field name="weight" readonly="1"/>
                            <field name="is_titipan" widget="boolean_toggle"/>
                            <field name="remark"/>
                            <field name="is_hide_paket" optional="hide"/>
                            <field name="ongkir_paket_state" widget="badge"
                            decoration-success="ongkir_paket_state == 'lunas'"
                            decoration-info="ongkir_paket_state == 'lunas_prev_invoice'"
                            decoration-danger="ongkir_paket_state == 'belum_lunas'"/>
                        </tree>
                    </field>
                 </page>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree_myfuture_inherit" model="ir.ui.view">
        <field name="name">account.invoice.tree.myfuture.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_send_wa_payment_link" type="object" string="Send Whatsapp"
                    groups="account.group_account_user"/>
            </xpath>
        </field>
    </record>
</odoo>
