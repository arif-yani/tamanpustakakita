<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <record id="my_future_product_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Product" multi_edit="1" duplicate="false" sample="1">
                <header>
                    <button string="Print Labels" type="object" name="action_open_label_layout"/>
                </header>
                    <field name="default_code" optional="show" readonly="1"/>
                    <field name="product_template_variant_value_ids" widget="many2many_tags" groups="product.group_product_variant" readonly="1"/>
                    <field name="name" readonly="1"/>
                    <field name="color" optional="show"/>
                    <field name="company_id" groups="base.group_multi_company" optional="hide" readonly="1"/>
                    <field name="size_ids" optional="show"/>
                    <field name="weight" optional="show"/>
                    <field name="standard_price" optional="show"/>
                    <field name="lst_price" optional="show" string="Sales Price"/>
                    <field name="categ_id" optional="hide"/>
                    <field name="product_tag_ids" widget="many2many_tags" readonly="1" optional="hide"/>
                    <field name="additional_product_tag_ids" widget="many2many_tags" optional="hide"/>
                    <field name="type" optional="hide" readonly="1"/>
                    <field name="uom_id" string="Unit" groups="uom.group_uom" optional="hide" readonly="1"/>
                    <field name="product_tmpl_id" readonly="1" column_invisible="True"/>
                    <field name="active" column_invisible="True"/>
                </tree>
            </field>
        </record>

    <record id="product_template_form_my_future_inherit_view" model="ir.ui.view">
        <field name="name">product.template.common.form.my.future.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_lots_and_weight']" position="inside">
                <label for="size_ids"/>
                <div class="o_row" name="size_ids">
                    <field name="size_ids" class="oe_inline" widget="many2many_tags"/>
                </div>
                 <label for="color"/>
                <div class="o_row" name="color">
                    <field name="color" class="oe_inline"/>
                </div>
            </xpath>
        </field>
    </record>

     <record id="action_my_future_product" model="ir.actions.act_window">
        <field name="name">Product</field>
        <field name="res_model">product.product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="my_future_product_product_tree_view"/>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Product!
            </p>
        </field>
    </record> 

  
</odoo>