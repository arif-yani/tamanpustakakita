<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="my_future_product_size_tree" model="ir.ui.view">
        <field name="name">my.future.product.size.tree</field>
        <field name="model">my.future.product.size</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <tree class="o_sale_order"
                  string="Keep Order" create="1" editable="bottom">
                <field name="name"/>
                <field name="width"/>
                <field name="lenght"/>
                <field name="height" />
            </tree>
        </field>
    </record>
    

    <record id="action_my_future_product_size" model="ir.actions.act_window">
        <field name="name">Product Size</field>
        <field name="res_model">my.future.product.size</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="my_future_product_size_tree"/>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new Size!
            </p>
        </field>
    </record>
</odoo>